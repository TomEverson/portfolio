---
const blogs = await Astro.glob("../../posts/*.md");

const dateFormat = (e: string) => {
  const date = new Date(e);
  const formattedDate = date.toLocaleDateString("en-GB", {
    day: "2-digit",
    month: "2-digit",
    year: "2-digit",
  });
  return formattedDate;
};
---

<div class="flex flex-col my-12 pl-4" id="blogs">
  <h1 class="text-4xl font-bold mb-8">ðŸ“ƒBlogs</h1>
  <div class="border-b pb-8">
    {
      blogs.map((blog) => (
        <a
          class="flex flex-row justify-between"
          href={`/blogs/${blog.frontmatter.slug}`}
        >
          <p>{blog.frontmatter.title}</p>
          <p>{dateFormat(blog.frontmatter.date)}</p>
        </a>
      ))
    }
  </div>
</div>
